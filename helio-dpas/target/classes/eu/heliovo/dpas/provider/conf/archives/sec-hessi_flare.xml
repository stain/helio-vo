<?xml version="1.0"  encoding="ISO-8859-1" ?>
<map idArchive="SEC-HESSI" version="2.0">
	<structure>
		<table name="hessi_flare">
			<field name="count_sec_peak" type="integer"/>
			<field name="duration"       type="integer"/>
			<field name="energy_kev"     type="float"/>
			<field name="flare_number"   type="integer"/>
			<field name="nar"            type="integer"/>
			<field name="radial_arcsec"  type="float"/>
			<field name="time_end"       type="datetime" format="''{0}''"/>
			<field name="time_peak"      type="datetime" format="''{0}''"/>
			<field name="time_start"     type="datetime" format="''{0}''"/>
			<field name="total_count"    type="integer"/>
			<field name="x_arcsec"       type="float"/>
			<field name="y_arcsec"       type="float"/>
		</table>
	</structure>

	<mapping>
		<param name="event-type"     value="yes" map="IGNORE"/>
		<param name="event_type"     value="yes" map="IGNORE"/>
		<param name="start-date"     value="yes" map="hessi_flare.time_start"/>
		<param name="time_start"     value="yes" map="hessi_flare.time_start"/>
		<param name="end-date"       value="yes" map="hessi_flare.time_end"/>
		<param name="time_end"       value="yes" map="hessi_flare.time_end"/>
		
		<param name="date"           value="no"  begin="hessi_flare.time_start" end="hessi_flare.time_end"/>
		<param name="count_sec_peak" value="yes" map="hessi_flare.count_sec_peak"/>
		<param name="duration"       value="yes" map="hessi_flare.duration"/>
		<param name="energy_kev"     value="yes" map="hessi_flare.energy_kev"/>
		<param name="flare_number"   value="yes" map="hessi_flare.flare_number"/>
		<param name="nar"            value="yes" map="hessi_flare.nar"/>
		<param name="radial_arcsec"  value="yes" map="hessi_flare.radial_arcsec"/>
		<param name="time_peak"      value="yes" map="hessi_flare.time_peak"/>
		<param name="total_count"    value="yes" map="hessi_flare.total_count"/>
		<param name="x_arcsec"       value="yes" map="hessi_flare.x_arcsec"/>
		<param name="y_arcsec"       value="yes" map="hessi_flare.y_arcsec"/>
	</mapping>
</map>

