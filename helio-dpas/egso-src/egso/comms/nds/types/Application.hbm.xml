<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- ============================================================= -->
<!-- Created on Feb 11, 2005                                       -->
<!-- Hibernate mapping for Application class                       -->
<!-- Nathan Ching (nc@mssl.ucl.ac.uk)                              -->
<!-- ============================================================= -->

<hibernate-mapping>

  <class name="org.egso.comms.nds.types.Application" table="application">

    <id name="id">
      <generator class="assigned"/>
    </id>

    <property name="parentPISId" column="parent_pis_id"/>

    <property name="name"/>

    <property name="type" type="org.egso.comms.common.hibernate.URIType"/>

    <property name="endpoint" type="org.egso.comms.common.hibernate.URIType"/>

    <property name="alive"/>

  </class>

</hibernate-mapping>