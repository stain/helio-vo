<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="common-html" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${org.egso.provider.logdir}/common.html"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd'.html'"/>
		<layout class="org.apache.log4j.HTMLLayout"/>
	</appender>

	<appender name="comms-html" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${org.egso.provider.logdir}/common.html"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd'.html'"/>
		<layout class="org.apache.log4j.HTMLLayout"/>
	</appender>

	<appender name="provider-html" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${org.egso.provider.logdir}/provider.html"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd'.html'"/>
		<layout class="org.apache.log4j.HTMLLayout"/>
	</appender>

	<appender name="apache-html" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${org.egso.provider.logdir}/apache.html"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd'.html'"/>
		<layout class="org.apache.log4j.HTMLLayout"/>
	</appender>

	<appender name="all-xml" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${org.egso.provider.logdir}/all.xml"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd'.xml'"/>
		<param name="Threshold" value="INFO"/>
		<layout class="org.apache.log4j.xml.XMLLayout"/>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
					value="=> %-6p: [%-32c] => %m%n %d{ISO8601} [%t] [%x] at %l%n%n"/>
		</layout>
	</appender>

	<category name="org.egso.common">
		<priority value="debug"/>
		<appender-ref ref="common-html"/>
		<appender-ref ref="all-xml"/>
		<appender-ref ref="console"/>
	</category>

	<category name="org.egso.comms">
		<priority value="debug"/>
		<appender-ref ref="comms-html"/>
		<appender-ref ref="all-xml"/>
		<appender-ref ref="console"/>
	</category>

	<category name="org.egso.provider">
		<priority value="debug"/>
		<appender-ref ref="provider-html"/>
		<appender-ref ref="all-xml"/>
		<appender-ref ref="console"/>
	</category>

	<category name="org.apache">
		<priority value="info"/>
		<appender-ref ref="apache-html"/>
		<appender-ref ref="all-xml"/>
	</category>

</log4j:configuration>

