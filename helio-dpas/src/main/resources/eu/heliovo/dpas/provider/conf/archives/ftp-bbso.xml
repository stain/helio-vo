<?xml version="1.0" encoding="ISO-8859-1"?>
<map idArchive="FTP-BBSO" version="0.3" date="23/01/2004">

	<structure>

		<!-- The mask node regroups all information about the mask that must be
			created to query the database. The general mask is defined as an
			attribute of the root node, and each child defines a description
			for every part of the mask. List of attributes:
			- format: Only used if idref refers to a keyword. It specifies the
			format of the value (YYYY = year on 4 digits, HHMM means 2 digits
			for the hours, 2 for minutes...).
			
			- mask: Generic mask to query this FTP archive.
			- number: Number of fields to fill in this mask.
		-->
		<mask mask="{0}/{1}/{2}/{3}_{4}_{5}_{6}_{7}.{8}" number="9">
			<param index="3" start="0"  end="3"/>
			<param index="4" start="5"  end="9"/>
			<param index="5" start="11" end="12"/>
			<param index="6" start="14" end="21" format="YYYYMMDD"/>
			<param index="7" start="23" end="28" format="HHMMSS"/>
			<param index="8" start="30"/>
		</mask>
	</structure>

	<mapping>
		<!-- A param node regroups all mapping information for a specific field
			in the mask. The attribute of the root node:
			- name: Name of the field for the EGSO system.
			- mappedName: Name of the field for the archive.
			- none: What must be used if the field is not filled by the query.
			As we are dealing with FTP masks, it implies that we have to use the
			'?' character (optionally, we can also use the character '*').
			- multiple-index: Indicates if the parameter is used many times in
			the masks (in this case, multiple-index="yes").
			- index: If multiple-index="no", indicates the index of this
			paramater in the mask (see node structure/mask).
			- format: Used to specify the format for a convertion (time
			essentially).
				[For the DATE node, some of these previous attributes are passed
				in the children nodes <value>, like index,format and none]
			The attributes for each value node:
			- value: value that is directly used in the mask (i.e. the value
			that is understandable by the archive).
			- name: Name of the value, used in the EGSO system (i.e. the value
			that is understandable by the EGSO system and roles).
			- longName: Long/real name of the value (i.e. the value that is
			understandable by the human).
		-->
		<param name="instrument" mappedName="Institution" none="????" multiple-index="no" index="3">
			<value value="bbso" name="BBSO_BBSO" longName="Big Bear Solar Observatory"/>
			<value value="kanz" name="KANZ__HALPH" longName="Kanzelhoehe Solar Observatory"/>
			<value value="ynao" name="YNAO__HALPH" longName="Yunnan Astronomical Observatory"/>
			<value value="gong" name="BBSO__GONG" longName="GONG"/>
			<value value="hsos" name="HSOS__HALPH" longName="Huairou Solar Observatory Station"/>
			<value value="oact" name="OACT__HALPH" longName="Catania Astrophysical Observatory"/>
		</param>
		
		<param name="DATE" multiple-index="yes">
			<value index="0" format="YYYY"     none="????"/>
			<value index="1" format="MM"       none="??"/>
			<value index="2" format="DD"       none="??"/>
			<value index="6" format="YYYYMMDD" none="????????"/>
		</param>
		
		<param name="TIME" multiple-index="no" none="??????" format="HHMMSS" index="7"/>
		
		<param name="observingdomain" mappedName="Image type code" none="?????" multiple-index="no" index="4">
			<value value="bband" name="N/A" longName="Broadband"/>
			<value value="caiik" name="Visible" longName="Calcium II K line (3933 A)"/>
			<value value="doppl" name="Visible" longName="Dopplergram (6103 A)"/>
			<value value="halph" name="Visible" longName="H alpha (6563 A)"/>
			<value value="vmgci" name="N/A" longName="Vectomagnetogram, component I"/>
			<value value="vmgcq" name="N/A" longName="Vectomagnetogram, component Q"/>
			<value value="vmgcu" name="N/A" longName="Vectomagnetogram, component U"/>
			<value value="vmgcv" name="N/A" longName="Vectomagnetogram, component V"/>
			<value value="white" name="N/A" longName="White light"/>
			<value value="10830" name="Infrared" longName="He I line 10830 A"/>
			<value value="heid3" name="Visible" longName="He I D3 line 5876 A o"/>
			<value value="05876" name="Visible" longName="He I D3 line 5876 A"/>
			<value value="06103" name="Visible" longName="Ca I 6103 A (VMG/DMG 'white light' or frame selection)"/>
			<value value="15600" name="Infrared" longName="IR camera (15600 A)"/>
			<value value="caxvm" name="Visible" longName="Calcium XV synoptic coronal map (5694 A)"/>
			<value value="heimp" name="Infrared" longName="He I 10830, synoptic map (10830 A)"/>
			<value value="magfe" name="Visible" longName="Magnetogram, Fe 5250 A"/>
			<value value="magmp" name="N/A" longName="Magnetogram, synoptic map"/>
			<value value="magxx" name="N/A" longName="Magnetogram, XX"/>
			<value value="igram" name="N/A" longName="Intensitygram"/>
			<value value="radio" name="N/A" longName="Radio"/>
			<value value="vmgav" name="N/A" longName="Vectomagnetogram, average"/>
			<value value="vmgtf" name="N/A" longName="Vectomagnetogram, transverse field"/>
			<value value="softx" name="N/A" longName="Soft X rays"/>
			<value value="hardx" name="N/A" longName="Hard X rays"/>
			<value value="00171" name="Extreme UltraViolet" longName="Fe IX/X line 171 A"/>
			<value value="00195" name="Extreme UltraViolet" longName="Fe XII line 195 A"/>
			<value value="00284" name="Extreme UltraViolet" longName="Fe XV line 284 A"/>
			<value value="00304" name="Extreme UltraViolet" longName="He II line 304 A"/>
		</param>

		<param name="miscellanous" mappedName="Miscellanous info code" none="??" multiple-index="no" index="5">
			<value value="fi" name="Full disk raw image (Singer or photometric telescope)"/>
			<value value="fl" name="Full disk image dark substracted and flat field corrected"/>
			<value value="fr" name="Full disk limb darkening substracted"/>
			<value value="ff" name="Full disk flat field frame"/>
			<value value="fd" name="Full disk dark frame"/>
			<value value="ri" name="Region raw image of the Sun (moderate spatial resolution, 25 cm reflector)"/>
			<value value="rl" name="Region image dark substracted and flat field corrected"/>
			<value value="rf" name="Region flat field frame"/>
			<value value="rd" name="Region dark frame"/>
			<value value="hi" name="Region raw image of the Sun (high spatial resolution, 25 cm reflector)"/>
			<value value="hl" name="Region image dark substracted and flat field corrected"/>
			<value value="hf" name="Region flat field frame"/>
			<value value="hd" name="Region dark frame"/>
			<value value="re" name="Region of the Sun"/>
			<value value="lm" name="Solar Limb Image"/>
		</param>

		<param name="extension" mappedName="File extension" none="???*" multiple-index="no" index="8">
			<value value="fts" name="FITS"/>
			<value value="fts.gz" name="FITS GZIPED"/>
			<value value="gif" name="GIF"/>
			<value value="jpg" name="JPEG"/>
			<value value="mpg" name="MPEG-1"/>
			<value value="txt" name="ASCII"/>
			<value value="cdf" name="Common Data Format"/>
			<value value="ppm" name="Portable pixmap"/>
			<value value="yoh" name="Yohkoh format"/>
		</param>
	</mapping>
	
	<info>
		<observatory>
			<instrument name="bbso" value="bbso__bbso" observatory="BBSO"/>
			<instrument name="gong" value="bbso__bbso" observatory="BBSO"/>
			<instrument name="hsos" value="hsos__hsos" observatory="HSOS"/>
			<instrument name="oact" value="oact__oact" observatory="OACT"/>
			<instrument name="kanz" value="kanz__kanz" observatory="KANZ"/>
			<instrument name="ynao" value="ynao__ynao" observatory="YNAO"/>
		</observatory>
	</info>
</map>

