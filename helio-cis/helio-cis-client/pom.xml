<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>eu.heliovo</groupId>
  <artifactId>helio-cis-client</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>helio-cis-client</name>
  <url>http://maven.apache.org</url>
  
  <parent>
    <artifactId>helio-cis</artifactId>
    <groupId>eu.heliovo</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
              	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>cog-jglobus</artifactId>
  		<version>1.8.0</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>commons-logging</artifactId>
  		<version>1.1</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>cryptix-asn1</artifactId>
  		<version>1</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>cryptix32</artifactId>
  		<version>1</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>jce-jdk13</artifactId>
  		<version>131</version>
  		<type>jar</type>
  	</dependency>
  	<dependency>
  		<groupId>eu.heliovo.securitylibraries</groupId>
  		<artifactId>puretls</artifactId>
  		<version>1</version>
  		<type>jar</type>
  	</dependency>    
    
    
  </dependencies>

 <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>1.12</version>
        <executions>
          <execution>
            <id>generate-stubs</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wsimport</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <verbose>true</verbose>
          <wsdlDirectory>../src/main/ws/wsdl</wsdlDirectory>
          <!-- as no wsdlFiles section is specified all wsdls will be taken -->
          
        </configuration>
        <!-- if you want to use a specific version of JAX-WS, you can do so like 
          this > 
        <dependencies>
          <dependency>
            <groupId>com.sun.xml.ws</groupId>
            <artifactId>jaxws-tools</artifactId>
            <version>2.1.1</version>
          </dependency>
        </dependencies -->
      </plugin>
    </plugins>
  </build>

</project>
