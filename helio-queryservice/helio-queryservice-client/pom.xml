<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>helio-queryservice</artifactId>
		<groupId>eu.heliovo</groupId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<groupId>eu.heliovo</groupId>
	<artifactId>helio-queryservice-client</artifactId>
	<version>0.4-SNAPSHOT</version>
	<name>helio-queryservice-client</name>
    <packaging>jar</packaging>
	<url>helio-queryservice/helio-queryservice-client</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!-- third party libraries -->
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<version>1.3</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<id>generate-stubs</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsimport</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
				    <verbose>true</verbose>
					<wsdlDirectory>../src/main/ws/wsdl</wsdlDirectory>
					
					<!-- as no wsdlFiles section is specified all wsdls will be taken -->
					
					<!-- *** you need the next line to set the wsdlLocation in the generated 
						stubs *** <wsdlLocation>http://localhost:8080/test</wsdlLocation> -->
				</configuration>
				<!-- if you want to use a specific version of JAX-WS, you can do so like 
					this > 
				<dependencies>
				    <dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-tools</artifactId>
    					<version>2.1.1</version>
				    </dependency>
				</dependencies -->
			</plugin>
		</plugins>
	</build>
</project>