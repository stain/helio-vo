<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>helio-queryservice</artifactId>
		<groupId>eu.heliovo</groupId>
		<version>5.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<groupId>eu.heliovo</groupId>
	<artifactId>helio-queryservice-client</artifactId>
	<version>5.0-SNAPSHOT</version>
	<name>helio-queryservice-client</name>
    <packaging>jar</packaging>
	<description>TODO: Add description in queryservice-client/pom.xml</description>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<!-- third party libraries -->
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<version>1.3</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
	    <resources>
	        <resource>
	            <directory>../src/main/ws/wsdl</directory>
	            <targetPath>${basedir}/target/classes/wsdl</targetPath>
	        </resource>
	    </resources>
		<plugins>			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<id>generate-stubs</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>wsimport</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
				    <verbose>true</verbose>
					<wsdlDirectory>../src/main/ws/wsdl</wsdlDirectory>
					<wsdlFiles>
					    <wsdlFile>long_runningquery.wsdl</wsdlFile>
                        <wsdlFile>helio_full_query.wsdl</wsdlFile> 
					</wsdlFiles>
					<!-- as no wsdlFiles section is specified all wsdls will be taken -->
					
					<!-- *** you need the next line to set the wsdlLocation in the generated 
						stubs *** <wsdlLocation>http://localhost:8080/test</wsdlLocation> -->
				</configuration>
				<!-- if you want to use a specific version of JAX-WS, you can do so like 
					this > 
				<dependencies>
				    <dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-tools</artifactId>
    					<version>2.1.1</version>
				    </dependency>
				</dependencies -->
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/target/jaxws/wsimport/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}/target/jaxws/wsimport/java</directory>
							<includes>
								<include>**/*.java</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
</project>