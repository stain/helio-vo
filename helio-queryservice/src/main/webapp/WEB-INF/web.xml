<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>HelioQueryService</display-name>
	<servlet>
		<servlet-name>StartUpServlet</servlet-name>
		<servlet-class>com.org.helio.service.StartupServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>	
	 <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>        
          <init-param>
			<param-name>struts.devMode</param-name>
			<param-value>true</param-value>
          </init-param>
    	</filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
       <filter-name>ContractsQueryFilterv1_0</filter-name>
       <filter-class>com.org.helio.filters.ContractsFilter</filter-class>
        <init-param>
           <param-name>wsdlFile</param-name>
           <param-value>schema/helio_complex.wsdl</param-value>
        </init-param>   
     </filter>

		<filter-mapping>
       		 <filter-name>ContractsQueryFilterv1_0</filter-name>
      		 <url-pattern>/services/HelioService</url-pattern>
  		</filter-mapping> 
  		
  		<filter-mapping>
       		 <filter-name>ContractsQueryFilterv1_0</filter-name>
      		 <url-pattern>/schema/*</url-pattern>
  		</filter-mapping> 
    
	<servlet>
		<description>
		</description>
		<display-name>HelioQueryService</display-name>
		<servlet-name>HelioQueryService</servlet-name>
		<servlet-class>com.org.helio.servlets.HelioQueryService</servlet-class>
	</servlet>
	<servlet>
    	<servlet-name>XFireServlet</servlet-name>
    	<servlet-class>com.org.helio.server.servlets.SoapServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
		<servlet-name>HelioQueryService</servlet-name>
		<url-pattern>/HelioQueryService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>XFireServlet</servlet-name>
        <url-pattern>/SoapServlet</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>XFireServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>    
  <env-entry>
   <env-entry-name>property/context</env-entry-name>
   <env-entry-type>java.lang.String</env-entry-type>
   <env-entry-value>test.txt</env-entry-value>
  </env-entry>
  
  <welcome-file-list>		
		<welcome-file>HelioHome.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>
