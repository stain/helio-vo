<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>HelioQueryService</display-name>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
		<init-param>
			<param-name>struts.devMode</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ContractsQueryFilterv1_0</filter-name>
		<filter-class>eu.heliovo.contract.filter.ContractsFilter</filter-class>
		<init-param>
			<param-name>wsdlFile</param-name>
			<param-value>schema/helioquery.wsdl</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ContractsQueryFilterv1_0</filter-name>
		<url-pattern>/services/HelioService</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ContractsQueryFilterv1_0</filter-name>
		<url-pattern>/schema/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>HelioQueryService</servlet-name>
		<display-name>HelioQueryService</display-name>
		<description></description>
		<servlet-class>eu.heliovo.queryservice.servlets.HelioQueryService</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>XFireServlet</servlet-name>
		<servlet-class>eu.heliovo.queryservice.server.servlets.SoapServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelioQueryService</servlet-name>
		<url-pattern>/HelioQueryService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>XFireServlet</servlet-name>
		<url-pattern>/SoapServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>XFireServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>HelioHome.jsp</welcome-file>
	</welcome-file-list>
	<env-entry>
		<env-entry-name>property/context</env-entry-name>
		<env-entry-value>/Users/vineethtshetty/HELIO/Helio-ICS.txt</env-entry-value>
		<env-entry-type>java.lang.String</env-entry-type>
	</env-entry>
</web-app>
