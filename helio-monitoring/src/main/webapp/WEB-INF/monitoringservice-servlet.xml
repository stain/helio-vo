<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="eu.heliovo.monitoring" />
	<context:property-placeholder location="classpath:helio-monitoring.properties"/>

	<!-- scheduling -->
	
	<bean name="pingJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="eu.heliovo.monitoring.scheduling.PingJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="pingComponent"  value-ref="pingComponent" />
				<entry key="monitoringDaemon"  value-ref="monitoringDaemon" />
			</map>
  		</property>
	</bean>
	
     <bean id="pingJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
         <property name="jobDetail" ref="pingJob" />
         <property name="startDelay" value="1000" /> <!-- after initialising wait 1s and then start -->
         <property name="repeatInterval" value="20000" /> <!-- every 20s -->
     </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
         <property name="triggers">
             <list>
                 <ref bean="pingJobTrigger" />
             </list>
         </property>
     </bean>

</beans>