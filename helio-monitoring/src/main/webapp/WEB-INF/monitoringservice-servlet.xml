<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="eu.heliovo.monitoring" />
	<context:property-placeholder location="classpath:helio-monitoring.properties"/>

	<!-- scheduling -->
	
	<bean name="executePingPhaseJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="eu.heliovo.monitoring.scheduling.ExecutePhaseJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="component"  value-ref="pingComponent" />
				<entry key="monitoringDaemon"  value-ref="${monitoringDaemonSpringBeanId}" />
			</map>
  		</property>
	</bean>

	<bean name="executeMethodCallPhaseJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="eu.heliovo.monitoring.scheduling.ExecutePhaseJob" />
		<property name="jobDataAsMap">
			<map>
				<entry key="component"  value-ref="methodCallComponent" />
				<entry key="monitoringDaemon"  value-ref="${monitoringDaemonSpringBeanId}" />
			</map>
  		</property>
	</bean>
	
	<!-- TODO move these Parameters in helio-monitoring.properties -->
    <bean id="pingPhaseJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
        <property name="jobDetail" ref="executePingPhaseJob" />
        <property name="startDelay" value="${pingPhaseStartDelay}" />
        <property name="repeatInterval" value="${pingPhaseInterval}" />
    </bean>
    
    <bean id="methodCallPhaseJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
        <property name="jobDetail" ref="executeMethodCallPhaseJob" />
        <property name="startDelay" value="${methodCallPhaseStartDelay}" />
        <property name="repeatInterval" value="${methodCallPhaseInterval}" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
         <property name="triggers">
             <list>
                 <ref bean="pingPhaseJobTrigger" />
                 <ref bean="methodCallPhaseJobTrigger" />
             </list>
         </property>
     </bean>

	<!-- remoting -->
	<bean id="remotingMonitoringDaemon" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
    	<property name="serviceUrl" value="${remotingMonitoringDaemonUrl}" />
    	<property name="serviceInterface" value="eu.heliovo.monitoring.daemon.RemotingMonitoringDaemon" />
	</bean>

</beans>