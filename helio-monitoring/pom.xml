		</dependency>
		
		<!-- for shortening URLs to display them in Nagios GUI -->
		<dependency>
    		<groupId>com.rosaloves</groupId>
    		<artifactId>bitlyj</artifactId>
    		<version>2.0.0</version>
		</dependency>
	</dependencies>

</project>